<form role="form">
        <legend>Config editor</legend>
		<div class="form-group">
			<label>root:</label>
			<input class='form-control' type='text' {{data-bind value='root'}}>
        </div>
		<div class="form-group">
            <label>apiroot:</label>
            <input type='text' class="form-control" {{data-bind value='apiroot'}}>
		</div>
		<div class="checkbox">
            <label class="checkbox">
                <input type="checkbox" {{data-bind checked='isDebug'}}>debug mode
            </label>
		</div>
</form>