<div class="x-list-data-container" id="{{push-id}}">
	{{#observe-wait this target=":pop-id" expr="isReloading"}}
		{{#if list.stateMessage}}
            <div class="x-list-state-container">
                <p class="x-list-state-message {{bootstrap-severity-class stateSeverity prefix="text"}}">{{{list.stateMessage}}}</p>
            </div>
		{{else}}
			{{render dataPresenter tag="div" trackStatus=true}}
		{{/if}}
	{{/observe-wait}}
</div>
