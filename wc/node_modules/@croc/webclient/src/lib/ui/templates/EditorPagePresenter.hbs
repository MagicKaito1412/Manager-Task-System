<form onsubmit="return false" class="container-fluid">
{{#if sections}}
    {{#each sections}}
        {{#observe}}
            {{#if title}}
                {{#if-not hidden}}
                    <h4 id='section-{{name}}' class="x-editor-section">{{title}}</h4><hr>
                {{/if-not}}
            {{/if}}
        {{/observe}}
        {{#observe-each editors tag="div"}}
            {{> peContainer}}
        {{/observe-each}}
    {{/each}}
{{else}}
    {{#observe-each editors tag="div"}}
        {{> peContainer}}
    {{/observe-each}}
{{/if}}
</form>

