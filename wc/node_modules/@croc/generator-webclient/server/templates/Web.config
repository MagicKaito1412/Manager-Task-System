<?xml version="1.0" encoding="utf-8"?>
<!--
  For more information on how to configure your ASP.NET application, please visit
  http://go.microsoft.com/fwlink/?LinkId=152368
  -->

<configuration>
	<configSections>
		<section name="croc.xfw3.appconfig" type="Croc.XFW3.Core.Configuration.XConfigurationData, Croc.XFW3.Core" />
		<section name="croc.xfw3.typefactory" type="Croc.XFW3.Core.Configuration.TypeFactoryData, Croc.XFW3.Core" />
	</configSections>

	<croc.xfw3.typefactory>
		<add name="Croc.XFW3." postfix=", Version=3.0.0.0, Culture=neutral, PublicKeyToken=5cc95d2b805c9517" />
		<schema-set>
			<add type="Croc.XFW3.XmlSchemas.Configuration.XConfigSchemaSetProvider, Croc.XFW3.XmlSchemas" />
		</schema-set>
	</croc.xfw3.typefactory>

	<croc.xfw3.appconfig include="app.config" />

	<appSettings>
		<add key="croc.clientBase" value="client" />
		<add key="croc.mainConfigFile" value="main.config.json" />
		<add key="croc.debug" value="true" />
		<add key="croc.stage" value="dev" />
	</appSettings>

	<system.web>
		<compilation debug="true" targetFramework="4.0" />
		<customErrors mode="Off" />
		<authentication mode="Windows">
			<forms timeout="525600">
			</forms>
		</authentication>

		<pages>
			<namespaces>
				<add namespace="System.Web.Helpers" />
				<add namespace="System.Web.Mvc" />
				<add namespace="System.Web.Mvc.Ajax" />
				<add namespace="System.Web.Mvc.Html" />
				<add namespace="System.Web.Routing" />
				<add namespace="System.Web.WebPages" />
			</namespaces>
		</pages>

		<httpRuntime requestValidationMode="2.0" requestPathInvalidCharacters="" maxRequestLength="1000000000" />

	</system.web>
	<location path="Metadata">
		<system.web>
			<authorization>
				<deny users="*" />
			</authorization>
		</system.web>
	</location>
	<location path="Models">
		<system.web>
			<authorization>
				<deny users="*" />
			</authorization>
		</system.web>
	</location>

	<system.webServer>
		<validation validateIntegratedModeConfiguration="false" />
		<modules runAllManagedModulesForAllRequests="true" />
		<staticContent>
			<clientCache cacheControlMode="UseExpires" httpExpires="Fri, 31 Dec 1999 00:00:00 GMT" />
			<!--
			cacheControlMode="DisableCache" 
			-->
			<remove fileExtension=".md" />
			<mimeMap fileExtension=".md" mimeType="text/plain" />
			<remove fileExtension=".appcache" />
			<mimeMap fileExtension=".appcache" mimeType="text/cache-manifest" />
			<remove fileExtension=".ttf" />
			<mimeMap fileExtension=".ttf" mimeType="font/ttf" />
			<remove fileExtension=".eot" />
			<mimeMap fileExtension=".eot" mimeType="application/vnd.ms-fontobject" />
			<remove fileExtension=".otf" />
			<mimeMap fileExtension=".otf" mimeType="font/otf" />
			<remove fileExtension=".woff" />
			<mimeMap fileExtension=".woff" mimeType="application/x-font-woff" />
			<remove fileExtension=".woff2" />
			<mimeMap fileExtension=".woff2" mimeType="application/font-woff2" />
			<remove fileExtension=".svg" />
			<mimeMap fileExtension=".svg" mimeType="application/vnd.ms-fontobject" />
			<remove fileExtension=".webapp" />
			<mimeMap fileExtension=".webapp" mimeType="application/x-web-app-manifest+json" />
			<remove fileExtension=".hbs" />
			<mimeMap fileExtension=".hbs" mimeType="text/x-handlebars-template" />
			<remove fileExtension=".ts" />
			<mimeMap fileExtension=".ts" mimeType="application/x-typescript" />
		</staticContent>
		<caching enabled="false" />
		<httpProtocol>
			<customHeaders>
				<add name="X-UA-Compatible" value="IE=Edge,chrome=1" />
				<remove name="X-Powered-By" />
				<remove name="X-AspNet-Version" />
				<remove name="Server" />
			</customHeaders>
		</httpProtocol>
		<security>
			<requestFiltering>
				<requestLimits maxAllowedContentLength="1000000000" />
			</requestFiltering>
		</security>
	</system.webServer>

	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<dependentAssembly>
				<assemblyIdentity name="System.Web.Mvc" publicKeyToken="31bf3856ad364e35" />
				<bindingRedirect oldVersion="0.0.0.0-4.0.0.0" newVersion="4.0.0.0" />
			</dependentAssembly>
			<dependentAssembly>
				<assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-6.0.0.0" newVersion="6.0.0.0" />
			</dependentAssembly>
		</assemblyBinding>
		<!-- This prevents the Windows Event Log from frequently logging that HMAC1 is being used (when the other party needs it). -->
		<legacyHMACWarning enabled="0" />
	</runtime>

	<system.diagnostics>
		<sources>
			<source name="croc.xfw3.clientlog" switchValue="Information">
				<listeners>
					<add name="text" type="System.Diagnostics.TextWriterTraceListener" initializeData="client.log" />
				</listeners>
			</source>
		</sources>
		<trace autoflush="true" indentsize="4" />
	</system.diagnostics>
</configuration>